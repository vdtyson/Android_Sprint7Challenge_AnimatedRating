<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:background=""
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.HomePage">

    <ImageView
            android:id="@+id/profile_picture"
            android:foregroundGravity="center"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.214" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"/>
    <LinearLayout
            android:id="@+id/profile_name"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/profile_picture"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:text="Sample Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="SampleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_info"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_name"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">
        <LinearLayout
                android:gravity="center"
                android:id="@+id/friends"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="32dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text="@string/sampletext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textAlignment="center"
                    android:textSize="10sp"
                    android:layout_marginTop="8dp"
                    android:text="@string/sampletext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:gravity="center"
                android:id="@+id/followers"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/posts"
                app:layout_constraintLeft_toRightOf="@id/friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text="@string/sampletext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textAlignment="center"
                    android:textSize="10sp"
                    android:layout_marginTop="8dp"
                    android:text="@string/sampletext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:gravity="center"
                android:id="@+id/posts"
                android:layout_marginRight="32dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text="@string/sampletext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textAlignment="center"
                    android:textSize="10sp"
                    android:layout_marginTop="8dp"
                    android:text="@string/sampletext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@drawable/ic_add_black_24dp"
            app:fabSize="mini"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/profile_info"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="60dp" android:id="@+id/bottomNavigationView">

    </com.google.android.material.bottomnavigation.BottomNavigationView>



</androidx.constraintlayout.widget.ConstraintLayout>